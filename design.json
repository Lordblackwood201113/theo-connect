{
    "meta": {
      "systemName": "THEO Design System",
      "version": "1.0.4",
      "description": "A brutalist, utilitarian design system for agricultural geo-data visualization.",
      "framework": "React",
      "styling": "Tailwind CSS",
      "icons": "Lucide React"
    },
    "tokens": {
      "colors": {
        "palette": {
          "geo-bg": "#F2F0E9",
          "geo-card": "#F9F8F4",
          "geo-dark": "#1A1A1A",
          "geo-gray": "#7A7A7A",
          "geo-orange": "#C88045",
          "geo-green": "#2D4F42",
          "geo-olive": "#6B705C",
          "geo-border": "#E5E2D9"
        },
        "semantic": {
          "background": {
            "default": "bg-geo-bg",
            "surface": "bg-geo-card",
            "inverse": "bg-geo-dark",
            "accent": "bg-geo-orange"
          },
          "text": {
            "primary": "text-geo-dark",
            "secondary": "text-geo-gray",
            "inverse": "text-[#EFECE5]",
            "brand": "text-geo-orange"
          },
          "border": {
            "subtle": "border-geo-border",
            "strong": "border-geo-dark"
          }
        }
      },
      "typography": {
        "fontFamily": {
          "primary": "Space Grotesk, sans-serif",
          "mono": "ui-monospace, SFMono-Regular, monospace"
        },
        "styles": {
          "display-hero": {
            "classes": "text-5xl md:text-7xl font-black uppercase tracking-tight leading-none",
            "description": "Used for main page titles."
          },
          "heading-lg": {
            "classes": "text-4xl font-bold uppercase leading-none tracking-tight",
            "description": "Section headers."
          },
          "heading-md": {
            "classes": "text-2xl font-bold uppercase leading-none",
            "description": "Card titles or secondary headers."
          },
          "label-micro": {
            "classes": "text-[10px] font-bold uppercase tracking-widest text-geo-gray",
            "description": "Data labels, overlines, and metadata."
          },
          "body-default": {
            "classes": "text-sm text-geo-dark font-normal",
            "description": "Standard readable text."
          },
          "data-mono": {
            "classes": "font-mono text-xs",
            "description": "Used for coordinates, IDs, and raw data values."
          }
        }
      },
      "shapes": {
        "borderRadius": {
          "default": "rounded-sm",
          "pill": "rounded-full",
          "none": "rounded-none"
        },
        "shadows": {
          "soft": "shadow-[0_4px_20px_-2px_rgba(0,0,0,0.05)]",
          "hard": "shadow-[4px_4px_0px_0px_rgba(0,0,0,0.1)]"
        }
      }
    },
    "components": {
      "Button": {
        "baseClasses": "px-6 py-3 font-bold text-xs uppercase tracking-wider transition-all flex items-center gap-3 active:scale-95 rounded-sm",
        "variants": {
          "primary": {
            "classes": "bg-geo-green text-[#EFECE5] hover:bg-[#1E362D] shadow-lg",
            "usage": "Main Call to Action"
          },
          "outline": {
            "classes": "border border-geo-dark text-geo-dark hover:bg-geo-dark hover:text-[#EFECE5]",
            "usage": "Secondary actions"
          },
          "ghost": {
            "classes": "text-geo-gray hover:text-geo-dark hover:bg-black/5",
            "usage": "Tertiary actions, settings, tools"
          }
        }
      },
      "Badge": {
        "baseClasses": "px-2 py-0.5 text-[10px] font-bold tracking-widest uppercase rounded-sm inline-block",
        "defaultColor": "bg-gray-200 text-gray-800",
        "variants": {
          "bio": "bg-geo-orange text-white",
          "neutral": "bg-geo-gray/20 text-geo-dark"
        }
      },
      "StatCard": {
        "structure": "Container > Label > ValueGroup(Value + Unit)",
        "containerClasses": "bg-geo-card border border-geo-border p-3 shadow-sm min-w-[120px]",
        "labelClasses": "text-[10px] text-geo-gray uppercase tracking-widest mb-1",
        "valueClasses": "text-xl font-bold text-geo-dark",
        "unitClasses": "text-[10px] text-geo-gray font-medium ml-1"
      },
      "Input": {
        "containerClasses": "w-full bg-geo-gray/20 backdrop-blur-sm rounded-full p-1 pl-4 flex items-center border border-geo-gray/20 shadow-inner",
        "fieldClasses": "bg-transparent border-none outline-none w-full text-xs md:text-sm text-geo-dark placeholder-geo-gray/70",
        "actionButtonClasses": "bg-geo-gray/30 p-2 rounded-full ml-2 hover:bg-geo-gray/50 transition-colors"
      },
      "ProducerCard": {
        "description": "A complex widget for displaying producer profiles.",
        "containerClasses": "bg-geo-card shadow-soft w-[320px] border border-geo-border relative overflow-hidden group",
        "features": [
          "Left colored border accent (w-1)",
          "Top right utility icon",
          "ID pill in top left (font-mono)",
          "Data grid at bottom"
        ]
      }
    },
    "layoutRules": {
      "spacing": {
        "containerPadding": "p-6 md:p-8",
        "gapSmall": "gap-2",
        "gapMedium": "gap-4",
        "gapLarge": "gap-8"
      },
      "grid": {
        "pattern": "radial-gradient(#000 1px, transparent 1px)",
        "size": "20px 20px",
        "opacity": "0.03"
      }
    }
  }